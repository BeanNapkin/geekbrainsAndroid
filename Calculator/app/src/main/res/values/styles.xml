<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/grey_700</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonsLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonsLine.Landscape">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="Text.Landscape">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>